{
  "name": "protolsd-support",
  "displayName": "protolsd-support",
  "description": "Adds basic ProtoLSD support to VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "protolsd-support.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "protolsd",
        "aliases": ["ProtoLSD", "protolsd"],
        "extensions": [".plsd"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "protolsd",
        "scopeName": "source.protolsd",
        "path": "./syntaxes/protolsd.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
